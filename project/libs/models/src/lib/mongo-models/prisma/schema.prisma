generator client {
  provider = "prisma-client-js"
  output   = "../../../../../../node_modules/.prisma/mongo-schema"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String   @unique
  aboutInfo           String   @default("")
  avatar              String   @default("")
  hashPassword        String
  birthDate           DateTime
  city                City
  role                Role
  specialization      String[]
  completedTasksCount Int?
  failedTasksCount    Int?
  rating              Float?
  ratingPosition      Int?
  publishedTasksCount Int?
  newTasksCount       Int?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("users")
}

enum City {
  Moscow
  SaintPetersburg
  Vladivostok
}

enum Role {
  Employer
  Executor
}
